@using blazor_server_dashboard.Data.Models

<div class="d-flex flex-wrap">
    <div class="dashboard-tile shadow-sm border p-2 mb-3 me-3 rounded">
        <h3>@(tasks?.Count(item => item.Priority.ToUpper() == "LOW"))</h3>
        <p>Low priority</p>
    </div>
    <div class="dashboard-tile shadow-sm border p-2 mb-3 me-3 rounded">
        <h3>@(tasks?.Count(item => item.Priority.ToUpper() == "MEDIUM"))</h3>
        <p>Medium priority</p>
    </div>
    <div class="dashboard-tile shadow-sm border p-2 mb-3 me-3 rounded">
        <h3>@(tasks?.Count(item => item.Priority.ToUpper() == "HIGH"))</h3>
        <p>High priority</p>
    </div>
    <div class="dashboard-tile shadow-sm border p-2 mb-3 me-3 rounded">
        <h3>@(tasks?.Count())</h3>
        <h5>Total complete</h5>
    </div>
</div>

@code{
    [CascadingParameter]
    public IQueryable<TaskModel>? tasks { get; set; }
}
