@page "/quickgrid-data"
@using Microsoft.AspNetCore.Components.QuickGrid
@using blazor_server_dashboard.Data.Models;

<QuickGrid Items="@tasks">
    @* <PropertyColumn Property="@(i => i.Id)" Sortable="true" /> *@
    <PropertyColumn Property="@(i => i.Description)" Sortable="true"/>
    <PropertyColumn Property="@(i => i.AssignedBy)" Sortable="true" />
    <PropertyColumn Property="@(i => i.AssignedTo)" Sortable="true" />
    <PropertyColumn Property="@(i => i.Priority)" Sortable="true" />
    @* <PropertyColumn Property="@(i => i.StartDate)" Format="yyyy-MM-dd" Sortable="true" /> *@
    <PropertyColumn Property="@(i => i.CompletionDate)" Format="yyyy-MM-dd" Sortable="true" />
    <PropertyColumn Property="@(i => i.DueDate)" Format="yyyy-MM-dd" Sortable="true" />
</QuickGrid>

@code {
    [CascadingParameter]
    public IQueryable<TaskModel>? tasks { get; set; }
}